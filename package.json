{
  "name": "mi-web",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.html",
  "scripts": {
    "build": "concurrently \"npm:build:pug\" \"npm:build:ts\" \"npm:build:sass\" \"npm:copy:images\"",
    "trash:build": "trash .\\build",
    "build:pug": "ts-node .\\render.ts",
    "build:ts": "tsc",
    "build:sass": "sass --style compressed --no-source-map .\\scss\\index.scss .\\build\\public\\stylesheets\\styles.css",
    "copy:images": "copyfiles -u 1 -V .\\assets\\images\\**\\* .\\build\\public",
    "dev": "watch \"npm run build\" -d --ignoreDirectoryPattern=\"/(build|node_modules)/\"",
    "deploy": "npm run trash:build && npm run build && git switch master && copyfiles -u 1 .\\build\\**\\* .\\ && git add * && git commit && git push --all origin",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "sanaruca",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "18.6.3",
    "@types/pug": "2.0.6",
    "@types/requirejs": "2.1.34",
    "concurrently": "7.3.0",
    "copyfiles": "2.4.1",
    "pug": "3.0.2",
    "sass": "1.54.0",
    "trash-cli": "5.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "watch": "0.13.0"
  }
}
