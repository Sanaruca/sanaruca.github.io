extends ./components/layout.pug

block content
  section.main-project.flex-content.black-target
    section.img-slider.flex-content
      .img-content#slide-img1
        img(src= project.imageUrl[0], alt="screenshot", srcset="")
      .img-content#slide-img3
        img(src= project.imageUrl[1], alt="screenshot", srcset="")
      .img-content#slide-img2
        img(src= project.imageUrl[2], alt="screenshot", srcset="")
      ul.img-selection-content.flex-content
        li: a(href="#slide-img2") 1
        li: a(href="#slide-img1") 2
        li: a(href="#slide-img3") 3
    section
      h1 #{project.name}
      p !{project.description.replace(/\n/g, '<br/>')}
      ul.tag-content.flex-content
        each skill of project.usedSkills
          li: span.tag ##{skill}